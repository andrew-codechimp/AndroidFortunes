<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="WearBaseTheme" parent="android:Theme.DeviceDefault.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="WearTheme" parent="WearBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TitleText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>

    <style name="ItemHeader" parent="@android:style/TextAppearance.Large">
    </style>

    <style name="SubText">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

</resources>